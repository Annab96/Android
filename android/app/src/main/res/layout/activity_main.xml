<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:padding="0dp"
            android:src="@drawable/ic_menu_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:paddingLeft="10dp"
            android:text="홀가분"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/main_search"
            android:layout_width="5dp"
            android:layout_height="5dp" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:padding="0dp"
            android:src="@drawable/ic_home_black_24dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickedTimeLine"
            android:padding="0dp"
            android:src="@drawable/main_image" />
    </LinearLayout>

    <LinearLayout
           android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_gravity="center_vertical"
             android:layout_weight="1"
             android:gravity="center"
             android:orientation="vertical">


             <ScrollView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">


                 <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent">


                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentTop="true"
                         android:layout_centerHorizontal="true"
                         android:layout_gravity="center"
                         android:gravity="center"
                         android:text="분양 정보"
                         android:textColor="@color/colorPrimaryDark"
                         android:textSize="20dp"
                         android:textStyle="bold" />


                     <TextView
                         android:id="@+id/dnsdudwncp"
                         android:layout_width="wrap_content"
                         android:layout_height="40dp"
                         android:layout_alignParentStart="true"
                         android:layout_alignParentTop="true"
                         android:layout_marginStart="30dp"
                         android:layout_marginTop="40dp"
                         android:gravity="center"
                         android:text="운영주체"
                         android:textColor="@color/colorPrimaryDark"
                         android:textSize="16dp"
                         android:textStyle="bold" />


                     <TextView
                         android:id="@+id/xjtqkxdnlcltmvlsj"
                         android:layout_width="100dp"
                         android:layout_height="40dp"
                         android:layout_below="@+id/dnsdudwncp"
                         android:layout_toEndOf="@+id/dnsdudwncp"></TextView>


                     <TextView
                         android:id="@+id/xjtqkxdnlcl"
                         android:layout_width="wrap_content"
                         android:layout_height="40dp"
                         android:layout_alignEnd="@+id/dnsdudwncp"
                         android:layout_below="@+id/dnsdudwncp"
                         android:gravity="center"
                         android:text="텃밭 위치"
                         android:textColor="@color/colorPrimaryDark"
                         android:textSize="16dp"
                         android:textStyle="bold" />


                     <TextView
                         android:id="@+id/dnsdudwncptmvlsj"
                         android:layout_width="100dp"
                         android:layout_height="40dp"
                         android:layout_alignTop="@+id/dnsdudwncp"
                         android:layout_toEndOf="@+id/dnsdudwncp"></TextView>


                     <TextView
                         android:id="@+id/xjtqkxdnlcltlrnsrn"
                         android:layout_width="100dp"
                         android:layout_height="40dp"
                         android:layout_alignParentEnd="true"
                         android:layout_below="@+id/dnsdudwncp"
                         android:layout_marginEnd="77dp"></TextView>


                     <TextView
                         android:id="@+id/xjtqkxaud"
                         android:layout_width="wrap_content"
                         android:layout_height="40dp"
                         android:layout_alignEnd="@+id/dnsdudwncp"
                         android:layout_below="@+id/xjtqkxdnlcl"
                         android:gravity="center"
                         android:text="텃밭명"
                         android:textColor="@color/colorPrimaryDark"
                         android:textSize="16dp"
                         android:textStyle="bold" />


                     <EditText
                         android:id="@+id/xjtqkxaudsodyd"
                         android:layout_width="wrap_content"
                         android:layout_height="40dp"
                         android:layout_below="@+id/xjtqkxdnlcltmvlsj"
                         android:layout_toEndOf="@+id/dnsdudwncp"
                         android:hint="내용을 입력해주세요"
                         android:paddingLeft="30dp"
                         android:paddingRight="100dp"
                         android:textSize="12dp" />


                     <Button
                         android:layout_width="60dp"
                         android:layout_height="30dp"
                         android:layout_alignParentEnd="true"
                         android:layout_alignParentTop="true"
                         android:layout_marginEnd="40dp"
                         android:layout_marginTop="180dp"
                         android:background="@color/colorPrimary"
                         android:onClick="onClickedFeed"
                         android:text="검색"
                         android:textColor="#ffffff"
                         android:textSize="16dp"
                         android:textStyle="bold" />


                     <TextView
                         android:id="@+id/tofhdnsqnsdid"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentTop="true"
                         android:layout_centerHorizontal="true"
                         android:layout_marginTop="221dp"
                         android:text="새로운 분양!"
                         android:textColor="@color/colorPrimaryDark"
                         android:textSize="20dp"
                         android:textStyle="bold" />

                     <GridView
                         android:layout_width="match_parent"
                         android:layout_height="400dp"
                         android:id="@+id/grid"
                         android:numColumns="2"
                         android:verticalSpacing="5dp"
                         android:horizontalSpacing="5dp"></GridView>


                 </RelativeLayout>


             </ScrollView>


         </LinearLayout>


    </LinearLayout>